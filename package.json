  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AlbericoD/overwolf-modern-react-boilerplate/issues"
  },
  "homepage": "https://github.com/AlbericoD/overwolf-modern-react-boilerplate#readme",
  "engines": {
    "node": ">=20.11.0"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "i18next": "^23.7.16",
    "overwolf-hooks": "^4",
    "react-i18next": "^14.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@overwolf/types": "^3.24.6",
    "@eslint/js": "^9.13.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10",
    "prettier": "^3.1.1",
    "@types/react-redux": "^7.1.33",
    "@types/remote-redux-devtools": "^0.5.8",
    "@redux-devtools/remote": "^0.9.1",
    "@redux-devtools/cli": "^4.0.0",
    "@semantic-release/git": "^10.0.1",
    "semantic-release": "^22.0.12"
  },
  "man": [
    "./README.md"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
